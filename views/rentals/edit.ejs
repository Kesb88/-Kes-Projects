<div class="edit-rentals">
  <h2>Edit Rental</h2>
</div>
<div class="form-container">
  <form
    action="/rentals/edit/<%= rentals._id %>"
    method="post"
    enctype="multipart/form-data"
  >
    <label for="headline">Headline:</label>
    <input type="text" id="headline" name="headline" required />
    <br />

    <label for="numSleeps">Number of Sleeps:</label>
    <input
      type="number"
      id="numSleeps"
      name="numSleeps"
      min="0"
      max="100"
      required
    />
    <br />
    <label for="numBedrooms">Number of Bedrooms:</label>
    <input
      type="number"
      id="numBedrooms"
      name="numBedrooms"
      min="0"
      max="100"
      required
    />
    <br />
    <label for="numBathrooms">Number of Bathrooms:</label>
    <input
      type="number"
      id="numBathrooms"
      name="numBathrooms"
      min="0"
      max="100"
      required
    />
    <br />
    <label for="pricePerNight">Price per Night:</label>
    <input
      type="number"
      id="pricePerNight"
      name="pricePerNight"
      step="0.01"
      pattern="^\d+(\.\d{2})?$"
      required
    />
    <br />
    <label for="city">City:</label>
    <input type="text" id="city" name="city" required /> <br />

    <label for="city">Province:</label>
    <input type="text" id="province" name="province" required /> <br />

    <label for="imageUrl">Upload Image:</label>
    <input
      type="file"
      id="imageUrl"
      name="imageUrl"
      value=" <%= values.imageUrl %>"
      required
    />
    <% if(validation.imageUrl) { %>
    <span style="color: red"><%= validation.imageUrl %></span>
    <% } %>
    <br />
    <label for="featuredRentals">Featured Rental:</label>
    <input
      type="checkbox"
      id="featuredRentals"
      name="featuredRentals"
      value="true"
    /><br />

    <button type="submit">Update</button> <br />
  </form>
</div>
